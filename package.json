{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "scripts",
    "mailer",
    "prisma",
    "ui",
    "be"
  ],
  "scripts": {
    "ui": "lerna --scope ui exec -- yarn run",
    "be": "lerna --scope be exec -- yarn run",
    "ui:be": "npm-run-all --parallel \"ui dev:hot\" \"be dev\"",
    "scripts": "lerna --scope scripts exec -- yarn run",
    "test": "CI=1 lerna run test --stream",
    "psm": "lerna --scope @local/prisma exec -- yarn run",
    "pkg:cnf": "lerna --scope @packages/config exec -- yarn run",
    "pkg:cns": "lerna --scope @packages/chronos exec -- yarn run",
    "pkg:evnt": "lerna --scope @packages/eventbrite exec -- yarn run",
    "pkg:cron": "lerna --scope @packages/chronos exec -- yarn run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn scripts bump-version && lerna run --concurrency 1 --stream precommit"
    }
  },
  "devDependencies": {
